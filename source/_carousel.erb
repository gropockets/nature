<% id = product.name.parameterize %>
<div id="<%= id %>" class="carousel slide" data-interval="false" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% for i in 0..(product.images.count-1) %>
      <li data-target="#<%= id %>" data-slide-to="<%= i %>" class="<%= "active" if i.equal?(0) %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% for i in 0..(product.images.count-1) %>
      <div class="item <%= "active" if i.equal?(0) %>">
        <%= slider_img product.images[i] %>
      </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#<%= id %>" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#<%= id %>" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
