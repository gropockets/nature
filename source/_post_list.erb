<% blog.articles[0...2].each do |article| %>
  <article id="post-1" class="post-listing">
    <figure class="featured-thumbnail thumbnail">
      <% link_to article do %>
        <%= image_tag article.data.img, :style => "height:290px; width:auto; margin: 0 auto;", :class => "attachment-post-thumbnail"  %>
      <% end %>
    </figure>
    <header class="post-header ">
      <span class="featured_badge"><i class="fa fa-thumb-tack"></i><strong>Featured</strong></span>
      <h3 class="post-title">
        <%= link_to article.title, article %>
      </h3>
    </header>
    <!-- Post Content -->
    <div class="post_content">
      <div class="excerpt">
        <p><%= article.summary %></p>
      </div>
      <%= link_to 'Read moreâ€¦', article %>
    </div>
    <span class="post_type_label "></span>
    <%#<span class="post_date"><time datetime="2015-04-28T12:14:51">April 28, 2015</time></span>%>
    <!-- Post Meta -->
    <div class="post-meta default">
      <span class="post-category">
        <a href="#" rel="category tag">#Alcohol-Free</a> 
        <a href="#" rel="category tag">#Lavender</a> 
        <a href="#" rel="category tag">#Organic</a>
      </span>
      <span class="post_comment"><i class="fa fa-comments"></i><a href="" class="comments-link">1 comment</a></span>
      <span class="post_author"><i class="fa fa-calendar-o"></i><a href="" title="Posts by chd-admin" rel="author"><time><%= article.date.strftime('%b %e %Y') %></time></a></span>
      <div class="clear"></div>
    </div>
    <!--// Post Meta -->
  </article> 
<% end %>
