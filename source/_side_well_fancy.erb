<div class="material post-listing">
  <div class="social-block">
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
    <a href="#"><i class="fa fa-linkedin"></i></a>
    <a href="#"><i class="fa fa-rss"></i></a>
  </div>
  <h2 style="text-align: center;"> Follow us on social media</h2>
</div>

<div class="material side-block content">
  <h2>Our Favorites</h2>
  <% @products = [data.products.deoderant[0], data.products.mouthwash[2], data.products.sunscreen[0]] %>
  <% @products.each do |p| %>
    <div class="post-snippet">
      <%= image_tag p.image, :class => "img-responsive product-tile"  %>
      <h3> <%= link_to p.name, p.path %> </h3>
    </div>
  <% end %> 
</div>

<% if defined? related_articles %>
  <div class="material side-block content">
    <h2>Related Posts</h2>
    <% blog.articles.select do |article| %>
      <% if related_articles.include? article.data.title %>
        <div class="post-snippet">
          <%= image_tag article.data.img, :class => "img-responsive"  %>
          <h3>
            <%= link_to article.title, article %>
          </h3>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

